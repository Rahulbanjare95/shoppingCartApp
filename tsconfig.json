{
  "compilerOptions": {

    "target": "es2016",                                  

    "module": "commonjs",                                
    "rootDir": "src",                                   
                    
    "sourceMap": true,                                   
    "outDir": "dist",                                    
    "esModuleInterop": true,  
    "forceConsistentCasingInFileNames": true,  
    "strict": true,                                    
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.spec.ts",
    "jest.config.js",
  ],
  "include": [
    "src/**/*.ts"
  ],
}